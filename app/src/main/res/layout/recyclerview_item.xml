<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="address"
            type="cn.rjgc.mapdemo.bean.POI"/>
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/poi_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="test"
        android:text="@{address.address}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/poi_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="test"
        android:text="@{address.addrDetails}"
        app:layout_constraintTop_toBottomOf="@id/poi_address"
        app:layout_constraintLeft_toRightOf="@id/poi_address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:lines="1"
        android:maxEms="19"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/selected_img"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:baseline="10dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/poi_address"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
</layout>